# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

aws_region     = "us-east-1"
environment    = "production"
cluster_name   = "tech-challenge-cluster"
cluster_version = "1.31"

vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Use non-burstable instances for production workloads
# m5.large: 2 vCPU, 8 GB RAM - balanced compute/memory
# m6i.large: 2 vCPU, 8 GB RAM - latest generation
# c5.large: 2 vCPU, 4 GB RAM - compute optimized
# r5.large: 2 vCPU, 16 GB RAM - memory optimized
# Avoid t3/t2 instances in production (burstable performance)
node_instance_types = ["m5.large"]
node_desired_size   = 2
node_min_size       = 1
node_max_size       = 4
